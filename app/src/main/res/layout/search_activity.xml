<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:orientation="vertical">

    <EditText
        android:id="@+id/et"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:hint="请输入起始期号"
        android:textColor="#000000"
        android:textColorHint="#999999" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:onClick="submit"
        android:text="查询"
        android:layout_marginBottom="20dp"
        />

    <Button
        android:id="@+id/btn_year"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginTop="60dp"
        android:gravity="center"
        android:text="年"
        android:textColor="#000000"
        android:textSize="20sp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_marginTop="60dp"
        android:layout_toRightOf="@+id/btn_year"
        android:gravity="center"
        android:hint="年"
        android:id="@+id/tv_year"
        android:clickable="true"
        android:textSize="20sp"
        android:background="@drawable/bg_select"
        android:onClick="year"
        />

    <Button
        android:id="@+id/btn_month"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginTop="140dp"
        android:gravity="center"
        android:text="月"
        android:textColor="#000000"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/tv_month"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_marginTop="140dp"
        android:layout_toRightOf="@+id/btn_month"
        android:onClick="month"
        android:gravity="center"
        android:hint="月"
        android:clickable="true"
        android:background="@drawable/bg_select"
        android:textSize="20sp" />

    <Button
        android:id="@+id/btn_day"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginTop="220dp"
        android:gravity="center"
        android:text="日"

        android:textColor="#000000"
        android:textSize="20sp" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_marginTop="220dp"
        android:layout_toRightOf="@+id/btn_month"
        android:gravity="center"
        android:id="@+id/tv_day"
        android:onClick="day"
        android:background="@drawable/bg_select"
        android:hint="日"
        android:clickable="true"
        android:textSize="20sp" />
    <Button
        android:id="@+id/btn_qihao"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginTop="300dp"
        android:gravity="center"
        android:text="期号"
        android:textColor="#000000"
        android:textSize="20sp" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_marginTop="300dp"
        android:layout_toRightOf="@+id/btn_month"
        android:gravity="center"
        android:clickable="true"
        android:onClick="qihao"
        android:id="@+id/tv_qihao"
        android:hint="期号"
        android:background="@drawable/bg_select"
        android:textSize="20sp" />
</RelativeLayout>